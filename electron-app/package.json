{
  "name": "sayas-tts",
  "version": "4.0.0",
  "description": "SayAs - LUDICUS OVERKILL Edition - Beautiful Text-to-Speech with Custom Voice Cloning",
  "main": "src/main/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/thevelvetones/Chatterbox-Gui-SayAs.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:portable": "electron-builder --win portable --x64",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "tts",
    "text-to-speech",
    "voice",
    "chatterbox",
    "ai",
    "speech",
    "audio"
  ],
  "author": {
    "name": "Lief",
    "email": "lief@sayas.local"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-log": "^5.0.3",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.sayas.tts",
    "productName": "SayAs TTS",
    "icon": "assets/icon.png",
    "asar": false,
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "python",
        "to": "python",
        "filter": ["**/*"],
        "optional": true
      },
      {
        "from": "voices",
        "to": "voices",
        "filter": ["**/*"],
        "optional": true
      },
      {
        "from": "presets",
        "to": "presets",
        "filter": ["**/*"],
        "optional": true
      }
    ],
    "win": {
      "target": "portable",
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "portable": {
      "unpackDirName": "SayAs-TTS-Data"
    },
    "publish": {
      "provider": "github",
      "owner": "thevelvetones",
      "repo": "Chatterbox-Gui-SayAs",
      "releaseType": "draft"
    }
  }
}
